@model Task3.Models.PizzaModel

<form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
    </div>

    <div class="form-group form-check">
        <input asp-for="ShowHalf" class="form-check-input" />
        <label asp-for="ShowHalf" class="form-check-label"></label>
    </div>

    <div class="form-group form-check">
        <input asp-for="CanHalf" class="form-check-input" />
        <label asp-for="CanHalf" class="form-check-label"></label>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsHit" class="form-check-input" />
        <label asp-for="IsHit" class="form-check-label"></label>
    </div>

    <div class="form-group">
        <label>Размеры:</label>
        @foreach (var size in ViewBag.AllSizes as List<Size>)
        {
            var isChecked = Model.Sizes.Contains(size.Value);

            <div class="form-check">
                <input type="checkbox"
                       name="Sizes"
                       value="@size.Value"
                       class="form-check-input"
                       @(isChecked ? "checked" : "") />

                <label class="form-check-label">@size.Value см</label>
            </div>
        }
        <span asp-validation-for="Sizes" class="text-danger"></span>
    </div>

    <div class="form-group">    
        <label>Типы теста:</label>
        @foreach (var type in ViewBag.AllDoughTypes as List<DoughType>)
        {
            var isChecked = Model.Types.Contains(type.Name);
            <div class="form-check">
                <input type="checkbox"
                       name="Types"
                       value="@type.Name"
                       class="form-check-input"
                       @(isChecked ? "checked" : "") />

                <label class="form-check-label">@type.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}