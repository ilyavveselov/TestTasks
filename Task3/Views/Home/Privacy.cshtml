<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <div id="pizza-container">
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
<script>
    const pizzaContainer = $('#pizza-container');

    $.ajax({
        url: '/api/pizza/getAllPizzas',
        method: 'GET',
        success: async function(data){
            pizzaContainer.empty();
            for (const pizza of data) {
                const cardHtml = await renderPizzaCard(pizza);
                pizzaContainer.append(cardHtml);
            }
        },
        error: function(data) {
            console.log(data);
            pizzaContainer.html('<p>Ошибка загрузки данных</p>');
        }
    })

    setRedirectToModalOnAllPizzas();
</script>